<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotNetSwag.OrderDetailsPage"
             Title="{Binding Name}">
    <StackLayout Margin="20"
                 VerticalOptions="StartAndExpand">
        <Label Text="Name"/>
        <Entry Text="{Binding Name}"/>
        
        <Label Text="Gender"/>
        <Entry Text="{Binding Gender}"/>
        
        <Label Text="T-Shirt Size (S, M, L, XL)"/>
        <Entry Text="{Binding TShirtSize}"/>

        <Label Text="Date of Order"/>
        <Entry Text="{Binding DateOfOrder}"/>

        <Label Text="T-Shirt Colour"/>
        <Entry Text="{Binding TShirtColour}"/>

        <Label Text="Shipping Address"/>
        <Entry Text="{Binding ShipAddress}"/>

        <Button x:Name="Save" Text="Save Order" Clicked="Save_Clicked"/>
        <Button x:Name="Delete" Text="Delete Order" Clicked="Delete_Clicked"/>
        <Button x:Name="Cancel" Text="Cancel" Clicked="Cancel_Clicked"/>

    </StackLayout>
</ContentPage>